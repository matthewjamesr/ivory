<div style="margin-top: 100px;" class="uk-width-small-1-2 uk-width-medium-1-4 uk-container-center">
  <h1>Forgot password?</h1>

  <%= form_for(resource, class: 'uk-form uk-form-stacked', as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="uk-form-row">
      <%= f.label :email, class: 'uk-form-label uk-text-large' %><br />
      <%= f.email_field :email, autofocus: true, class: 'uk-width-1-1 uk-form-large', style: 'height: 50px; padding-left: 15px; padding-top: 15px; padding-bottom: 15px;' %>
    </div>

    <div class="actions">
      <%= f.submit "Send reset instructions", class: 'uk-button uk-button-primary uk-button-large uk-width-1-1 margin-top-large' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
