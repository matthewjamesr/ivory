<div style="margin-top: 100px;" class="uk-width-small-1-2 uk-width-medium-1-4 uk-container-center">
  <h1>Sign up</h1>

  <%= form_for(resource, class: 'uk-form uk-form-stacked', as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="uk-form-row">

      <%= f.label :email, class: 'uk-form-label uk-text-large' %>
      <%= f.email_field :email, autofocus: true, class: 'uk-width-1-1 uk-form-large', style: 'height: 50px; padding-left: 15px; padding-top: 15px; padding-bottom: 15px;' %>

      <%= f.label :password, class: 'uk-form-label uk-text-large' %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'uk-width-1-1 uk-form-large', style: 'height: 50px; padding-left: 15px; padding-top: 15px; padding-bottom: 15px;' %>

      <%= f.label :password_confirmation, class: 'uk-text-large' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'uk-width-1-1 uk-form-large', style: 'height: 50px; padding-left: 15px; padding-top: 15px; padding-bottom: 15px;' %>
    </div>

    <div class="actions">
      <%= f.submit "Create account", class: 'uk-button uk-button-primary uk-button-large uk-width-1-1 margin-top-large' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
