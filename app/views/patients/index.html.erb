<h1>Patients</h1>
<p>Patients currently enrolled</p>

<%= link_to 'Add Patient', new_patient_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Provider</th>
    <th colspan="3"></th>
  </tr>
 
  <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.name %></td>
      <td><%= patient.age %></td>
      <td><%= patient.provider %></td>
      <td><%= link_to 'Show', patient_path(patient) %></td>
      <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
      <td><%= link_to 'Destroy', patient_path(patient),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  
</table>
